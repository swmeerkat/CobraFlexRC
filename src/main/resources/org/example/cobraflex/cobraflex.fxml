<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox styleClass="panel" xmlns:fx="http://javafx.com/fxml"
  fx:controller="org.example.cobraflex.UiController">
  <stylesheets>
    <URL value="@cobraflex.css"/>
  </stylesheets>

  <HBox styleClass="button-grid-section">
    <VBox>
      <GridPane styleClass="button-grid">
        <Button GridPane.columnIndex="0" GridPane.rowIndex="0" text="&#x2B09;"
          onMousePressed="#gul_pressed" onMouseReleased="#gimbal_released"/>
        <Button GridPane.columnIndex="1" GridPane.rowIndex="0" text="&#x2B06;"
          onMousePressed="#gum_pressed" onMouseReleased="#gimbal_released"/>
        <Button GridPane.columnIndex="2" GridPane.rowIndex="0" text="&#x2B08;"
          onMousePressed="#gur_pressed" onMouseReleased="#gimbal_released"/>
        <Button GridPane.columnIndex="0" GridPane.rowIndex="1" text="&#x2B05;"
          onMousePressed="#gml_pressed" onMouseReleased="#gimbal_released"/>
        <Button GridPane.columnIndex="1" GridPane.rowIndex="1" text="&#x0e4f;"
          onMousePressed="#gmm_pressed"/>
        <Button GridPane.columnIndex="2" GridPane.rowIndex="1" text="&#x2B95;"
          onMousePressed="#gmr_pressed" onMouseReleased="#gimbal_released"/>
        <Button GridPane.columnIndex="0" GridPane.rowIndex="2" text="&#x2B0B;"
          onMousePressed="#gbl_pressed" onMouseReleased="#gimbal_released"/>
        <Button GridPane.columnIndex="1" GridPane.rowIndex="2" text="&#x2B07;"
          onMousePressed="#gbm_pressed" onMouseReleased="#gimbal_released"/>
        <Button GridPane.columnIndex="2" GridPane.rowIndex="2" text="&#x2B0A;"
          onMousePressed="#gbr_pressed" onMouseReleased="#gimbal_released"/>
      </GridPane>
      <HBox styleClass="light-slider">
        <Label styleClass="light-label" text="Light"/>
        <Slider fx:id="gimbal_light" orientation="HORIZONTAL" minWidth="190" min="0" max="255" value="0"/>
      </HBox>
      <Label text="Gimbal"/>
    </VBox>
    <VBox>
      <HBox>
        <VBox>
          <GridPane styleClass="button-grid">
            <Button GridPane.columnIndex="0" GridPane.rowIndex="0" text="&#x2B09;"
              onMousePressed="#cul_pressed" onMouseReleased="#chassis_released"/>
            <Button GridPane.columnIndex="1" GridPane.rowIndex="0" text="&#x2B06;"
              onMousePressed="#cum_pressed" onMouseReleased="#chassis_released"/>
            <Button GridPane.columnIndex="2" GridPane.rowIndex="0" text="&#x2B08;"
              onMousePressed="#cur_pressed" onMouseReleased="#chassis_released"/>
            <Button GridPane.columnIndex="0" GridPane.rowIndex="1" text="&#x2B05;"
              onMousePressed="#cml_pressed" onMouseReleased="#chassis_released"/>
            <Button GridPane.columnIndex="1" GridPane.rowIndex="1" text="&#x23f9;"
              onMousePressed="#cmm_pressed"/>
            <Button GridPane.columnIndex="2" GridPane.rowIndex="1" text="&#x2B95;"
              onMousePressed="#cmr_pressed" onMouseReleased="#chassis_released"/>
            <Button GridPane.columnIndex="0" GridPane.rowIndex="2" text="&#x2B0B;"
              onMousePressed="#cbl_pressed" onMouseReleased="#chassis_released"/>
            <Button GridPane.columnIndex="1" GridPane.rowIndex="2" text="&#x2B07;"
              onMousePressed="#cbm_pressed" onMouseReleased="#chassis_released"/>
            <Button GridPane.columnIndex="2" GridPane.rowIndex="2" text="&#x2B0A;"
              onMousePressed="#cbr_pressed" onMouseReleased="#chassis_released"/>
          </GridPane>
          <HBox styleClass="light-slider">
            <Label styleClass="light-label" text="Light"/>
            <Slider fx:id="front_light" orientation="HORIZONTAL" minWidth="190" min="0" max="255" value="0"/>
          </HBox>
        </VBox>
        <VBox styleClass="speed-box">
          <Slider fx:id="chassis_speed" orientation="VERTICAL" maxWidth="70" minHeight="220"
            min="0" max="1800" value="500"/>
          <Label styleClass="speed-label" text="Speed"/>
        </VBox>
      </HBox>
      <Label text="Chassis"/>
    </VBox>
  </HBox>

  <TextArea fx:id="console" editable="false" VBox.vgrow="ALWAYS"/>

  <HBox styleClass="button-row">
    <Button text="Feedback" onAction="#getFeedback" onKeyPressed="#keyPressed"
      onKeyReleased="#keyReleased"/>
    <Button text="Keyboard control" onAction="#enterKeyboardControl" onKeyPressed="#keyPressed"
      onKeyReleased="#keyReleased"/>
  </HBox>
</VBox>
